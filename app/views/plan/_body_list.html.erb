      <div class="all_body">
        <table>
          <% @body= @kbody.find_by_nomer_page(@page)%>
          <% @body= @body.nil? ? Kbody.new : @body %>
          <%=form_for :body do |f|%>
            <%= f.hidden_field :kplan_id%>
            <%= f.hidden_field :nomer_page%>

            <tr>
              <th class="d1">№ урока</th> 
              <th class="d2">Наименование разделов и тем</th> 
              <th class="d3">Номер недeли</th>
              <th class="d4">Кол-во часов</th> 
              <th class="d5">Вид занятий</th> 
              <th class="d5">Наглядные пособия</th>
              <th class="d5">Задание для студентов</th> 
              <th width="195px" colspan=2>Самостоятельная работа</th>
              <th class="d5">Удалить страницу</th>
            </tr>
            <%(1..26).each do |str|%>
            <tr>
              <td> <%= f.text_field "nomer_uroka#{str}" , :maxlength => 4, :class=>"i1" %> </td> 
              <td> <%= f.text_field "tema_zaniatia#{str}" , :maxlength => 46, :class=>"i2" %> </td> 
              <td> <%= f.text_field "nomer_nedeli#{str}"  , :maxlength => 5, :class=>"i3" %> </td>  
              <td> <%= f.text_field "kolvo_chasov#{str}" , :maxlength => 5, :class=>"i3" %> </td> 
              <td> <%= f.text_field "vid_zaniatia#{str}" , :maxlength => 15, :class=>"i4" %> </td>
              <td> <%= f.text_field "nagl_posobie#{str}" , :maxlength => 15, :class=>"i4" %> </td> 
              <td> <%= f.text_field "zadano#{str}" , :maxlength => 15, :class=>"i4" %> </td> 
              <td> <%= f.text_field "samrab_casov#{str}" , :maxlength => 4, :class=>"i1" %> </td> 
              <td> <%= f.text_field "samrab_zadanie#{str}" , :maxlength => 15, :class=>"i4" %> </td>
            </tr>
            <%end%>
            <% if @page==@page_count %>
                <tr><td colspan=9></td> <th class="d5">Добавить страницу</th></tr>
            <%end%>
          <% end %>
        </table>
      </div>  
