#encoding: utf-8

<div class="all_first">

   <div class="all_title">
       <div id="header">
            <p> СПИСОК  ЛИТЕРАТУРЫ </p>
       </div>
       <%= form_tag :action => :save_lib do %>
          <%= hidden_field_tag "id", @id%>
          <%= @error_message %>
          <% (0..23).each do |str| %>
            <%= text_field_tag "klib#{str+1}", @klib_mas[str].literatura , :maxlength => 68, :class=>"i17" %> 
          <%end%>
          <%= submit_tag %>
        <% end %>

        <p> </p>
   </div>
</div>
<div>
  <a class="submit_button" id="submit_lib">Сохранить</a>
</div>